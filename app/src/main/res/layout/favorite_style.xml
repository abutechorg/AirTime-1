<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:gravity="left|center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="FavoriteName"
        android:id="@+id/favId"
        android:drawableLeft="@drawable/icon_user"
        android:drawableTint="@null"
        android:padding="4dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Amount"
        android:id="@+id/amount"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:drawableLeft="@drawable/icon_mainpage_amount"
        android:drawableTint="@null"
        android:background="@drawable/border_gray"
        android:padding="4dp"
        android:gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favId"
        android:layout_toEndOf="@+id/favId"
        android:layout_toLeftOf="@+id/resend"
        android:layout_toStartOf="@+id/resend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="R E S E N D"
        android:textSize="10sp"
        android:id="@+id/resend"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:background="@drawable/buttongreen"
        android:textColor="@drawable/text_button_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>