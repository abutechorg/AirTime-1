<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    android:padding="16dp"
    tools:context="fragments.RechargeWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_gray"
            android:hint="Enter Amount"
            android:inputType="number"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Proceed Payment with..." />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TableLayout
                android:id="@+id/tabGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:stretchColumns="*">

                <TableRow>

                    <LinearLayout android:paddingLeft="4dip">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/visaButton"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_icon_payment_visa" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout android:paddingLeft="4dip">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/mcButton"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_icon_payment_mastercard" />
                        </TableRow>
                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center"
                        android:paddingLeft="4dip">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_gray"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/verveButton"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_icon_payment_verve" />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right"
                        android:orientation="vertical"
                        android:padding="0dip">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/otherButton"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_icon_payment_others" />

                        </TableRow>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>
