<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity = "center"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="4dp"
    android:background="@color/appWhite"
    tools:context="fragments.MultipleSell">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:id="@+id/addnumber"
            android:background="@drawable/imagebuttonblue"
            android:src="@drawable/ic_icon_main_contactbrowse" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buyTable">

                </TableLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/monitorLine">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Add Max 3 Phone Numbers"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/tv"
                        android:layout_gravity="center_horizontal" />

                </TableRow>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/send"
                android:textColor="@color/appGreen"
                android:background="@drawable/buttongreen"
                android:text="S E N D" />

        </TableRow>

    </LinearLayout>
</FrameLayout>
