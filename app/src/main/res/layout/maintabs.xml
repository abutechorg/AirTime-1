<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/accountTabs">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/mainTabGroup"
        android:stretchColumns="*">
        <TableRow>
            <LinearLayout
                android:padding="0dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:text="Send To One"
                    android:id="@+id/sendOne"
                    android:onClick="onAccountTabClick"
                    android:background="@drawable/buttonorange"
                    android:textColor="@color/appWhite"/>
            </LinearLayout>


            <LinearLayout
                android:padding="0dip"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@drawable/border_orange"
                    android:textColor="@color/appOrange"
                    android:text="Send To Many"
                    android:id="@+id/sendMany"
                    android:onClick="onAccountTabClick" />
            </LinearLayout>

            <LinearLayout
                android:padding="0dip"
                android:gravity="right">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:background="@drawable/border_orange"
                    android:textColor="@color/appOrange"
                    android:text="Favorites"
                    android:id="@+id/favorites"
                    android:onClick="onAccountTabClick"
                    android:gravity="center" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</FrameLayout>